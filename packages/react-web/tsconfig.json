{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "target": "es5",
    "outDir": "lib",
    "module": "commonjs",
    "jsx": "react",
    "declaration": false,
    "sourceMap": false,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "preserveConstEnums": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "lib": ["es6", "dom"],
    "types": ["react-dom-18", "static-assets", "webpack-env"],
    "skipLibCheck": true
  },
  "include": ["src", "./babel.config.js", "./jest.config.js", "./.eslintrc.json"]
}
