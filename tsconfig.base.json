{
  "compilerOptions": {
    "rootDir": ".",
    "target": "ES2019",
    "module": "esnext",
    "moduleResolution": "node",
    "lib": ["ES2019", "dom"],
    "sourceMap": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "pretty": true,
    "typeRoots": ["node_modules/@types", "./typings"],
    "baseUrl": ".",
    "paths": {
      "@eevee/react-button": ["packages/eevee-components/react-button/src/index.ts"],
      "@eevee/react-icons": ["packages/eevee-components/react-icons/src/index.ts"],
      "@eevee/react-link": ["packages/eevee-components/react-link/src/index.ts"],
      "@eevee/react-portal": ["packages/eevee-components/react-portal/src/index.ts"],
      "@eevee/react-provider": ["packages/eevee-components/react-provider/src/index.ts"],
      "@eevee/react-shared-contexts": ["packages/eevee-components/react-shared-contexts/src/index.ts"],
      "@eevee/react-theme": ["packages/eevee-components/react-theme/src/index.ts"],
      "@eevee/react-utilities": ["packages/eevee-components/react-utilities/src/index.ts"],
      "@eevee/react-mdx-comp": ["packages/eevee-components/react-mdx-comp/src/index.ts"],

      "@components/*": ["packages/react-web/src/components/*"],
      "@constants/*": ["packages/react-web/src/constants/*"],
      "@context/*": ["packages/react-web/src/context/*"],
      "@feature/*": ["packages/react-web/src/feature/*"],
      "@hooks/*": ["packages/react-web/src/hooks/*"],
      "@layout/*": ["packages/react-web/src/layout/*"],
      "@libs/*": ["packages/react-web/src/libs/*"],
      "@pages/*": ["packages/react-web/src/pages/*"],
      "@utilities/*": ["packages/react-web/src/utilities/*"]
    }
  },
  "exclude": ["node_modules"]
}
