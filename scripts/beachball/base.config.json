{
  "disallowedChangeTypes": ["major", "prerelease"],
  "tag": "latest",
  "generateChangelog": true,
  "ignorePatterns": [
    "**/*.{shot,snap}",
    "**/*.{test,spec}.{ts,tsx}",
    "**/*.stories.tsx",
    "**/.eslintrc.*",
    "**/__fixtures__/**",
    "**/__mocks__/**",
    "**/config/tests.js",
    "**/jest.config.js",
    "**/tests/**"
  ],
  "scope": ["!packages/eevee/*"],
  "changehint": "Run 'yarn change' to generate a change file"
}
