{
  "name": "eevee",
  "version": "1.0.0",
  "main": "index.js",
  "author": "Shinigami",
  "license": "MIT",
  "private": true,
  "workspaces": {
    "packages": [
      "packages/*",
      "packages/shared/*",
      "packages/lib/*"
    ]
  },
  "scripts": {
    "postinstall": "husky install",
    "test": "jest --passWithNoTests",
    "start": "cd ./packages/web && yarn start",
    "lint": "eslint \"packages/**/*.{ts,tsx}\"",
    "prettier:fix": "prettier --write \"packages/**/*.{ts,tsx}\"",
    "prettier:check": "prettier \"packages/**/*.{ts,tsx}\"",
    "tsc:check": "tsc --noEmit --project tsconfig.json"
  },
  "devDependencies": {
    "@commitlint/cli": "^16.2.4",
    "@commitlint/config-conventional": "^16.2.4",
    "@eevee/prettier-eslint": "*",
    "@react-spring/types": "^9.4.5",
    "@testing-library/react": "^13.1.1",
    "@types/jest": "^27.4.1",
    "@types/node": "^17.0.23",
    "@types/react": "^18.0.9",
    "@types/react-dom": "^18.0.3",
    "husky": "^7.0.4",
    "jest": "^27.5.1",
    "lint-staged": "^12.4.1",
    "ts-jest": "^27.1.4",
    "ts-node": "^10.7.0",
    "tslib": "^2.3.1",
    "typescript": "^4.6.3"
  },
  "lint-staged": {
    "packages/**/*.{ts,tsx}": [
      "yarn prettier:fix",
      "yarn lint"
    ]
  }
}
